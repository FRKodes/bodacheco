.lora
	font-family 'Lora', serif
cafe = #825126
.cafe
	color cafe
.black
	color black
textarea
	resize none
#rsvp
	padding-top 60px
.col-sm-4
	margin-top 40px
	
body
	background #F9F3DD
	color black
	font-family 'Lato', sans-serif
	padding-top 55px
.navbar-default
	background white
	.navbar-toggle
		border none
		.icon-bar
			background #805125
			height 4px
			width 30px
.banner
	background transparent url(../../images/banner.jpg) no-repeat center center
	height 400px
	font-size 19em
	color white
	padding-top 40px
h1.intro
	color cafe
	font-size 1.6em
	line-height 1.2em
	margin-bottom 20px
	margin-top 20px
.block-photo
	margin-bottom 70px
	img
		width 100%
		height auto
		display block
		-webkit-box-shadow: 0px 42px 53px -12px rgba(0,0,0,0.6);
		-moz-box-shadow: 0px 42px 53px -12px rgba(0,0,0,0.6);
		box-shadow: 0px 42px 53px -12px rgba(0,0,0,0.6);
		
.ig-block
	figure
		padding 0
		margin 0
	img
		width 90%
		height auto
		display block
	.hashtag
		font-size 1.4em
.venue-date
	background white
	margin-top 20px
	padding-top 30px
	padding-bottom 30px
	.col-sm-4
		margin-bottom 20px
	h2
		font-size 3.6em
	span
		font-size 7em
	p.title
		font-size 3.4em
		text-transform uppercase
	hr.cafe
		margin -10px auto 0 auto
		width 50px
		border 1px solid cafe
	p.text
		padding-top 20px
		font-size 1.2em
	a.mapa
		background cafe
		color white
		text-transform uppercase
		width 100%
		display block
		padding 8px 0
		font-size 1.2em
.hoteles
	margin-top -40px
	padding-top 30px
	padding-bottom 50px
	background white
.wish
	margin-top 20px
	text-transform uppercase
	font-size 2em
form
	padding-bottom 30px
	position relative
.form-group.error
	.form-control
		border-color red
.btn.btn-primary
	background cafe
	border-color cafe
	color white
	font-size 1.2em
	width 100%
	&:hover
	&:active
	&:focus
		background rgba(cafe, .8)
		border-color cafe
.sent_mail_alert
	background rgba(cafe, .9)
	text-align center
	color white
	padding 60px 0
	position absolute
	top 50px
	left 0
	width 100%
	font-size 3em
	display none
@media screen and (min-width:480px)
	.banner
		font-size 26em
	.ig-block
		img
			width 100%
		p
			font-size 1.6em
		.hashtag
			font-size 1.6em
	.venue-date
		a.mapa
			font-size 1.2em
			margin 20px auto
			width 60%
	form
		display block
		height auto
		margin 0 auto
		width 400px
	.btn.btn-primary
		font-size 1.4em
@media screen and (min-width:768px)
	.col-sm-4
		margin-top 10px
	body
		padding-top 50px
	.navbar-nav
		float none
		font-size 1.2em
		margin 0 auto
		text-align center
		text-transform uppercase
	.navbar-nav>li
		display inline-block
		float none
		margin 0 40px
	.navbar-default .navbar-nav>.active>a
	.navbar-default .navbar-nav>li>a
		color cafe
	.banner
		font-size 45em
		padding-top 0px
		p
			margin-top -190px
	h1.intro
		font-size 2em
		margin-bottom 40px
		margin-top 40px
		padding 0 20%
	.venue-date
		a.mapa
			width 100%
	form
		width 680px
@media screen and (min-width:1000px)
	.banner
		font-size 60em
		p
			margin-top -290px